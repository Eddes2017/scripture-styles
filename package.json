{
  "name": "api-bible-assets",
  "version": "0.1.0",
  "description": "SASS and CSS styles for API.Bible Scripture Output",
  "main": "index.js",
  "style": "dist/css/api-bible-content.css",
  "sass": "scss/api-bible-content.scss",
  "scripts": {
    "test": "jest",
    "build": "npm run build-nested && npm run build-compressed && npm run gzip",
    "build-nested": "node-sass scss/api-bible-content.scss dist/css/api-bible-content.css --source-map true --output-style nested",
    "build-compressed": "node-sass scss/api-bible-content.scss dist/css/api-bible-content.css --source-map true --output-style compressed",
    "gzip": "gzip < dist/css/api-bible-content.css > dist/css/api-bible-content.css.gz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/americanbible/api-bible-assets.git"
  },
  "author": "American Bible Society",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/americanbible/api-bible-assets/issues"
  },
  "homepage": "https://github.com/americanbible/api-bible-assets#readme",
  "dependencies": {
    "node-sass": "^4.11.0"
  },
  "devDependencies": {
    "jest": "^24.5.0"
  }
}
